		driver.findElement(By.name("Add")).click();
		driver.findElement(By.name("Handler...")).click();
		driver.findElement(By.name("Drop Down Button")).click();
		Thread.sleep(3000);
		driver.findElement(By.name("UPAI - UPA Input (OMM Implementation)")).click();
